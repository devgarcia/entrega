<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="card text-center mx-5">
      <div class="card-body top-card"> 
        <h3 class="h3Space"> Company Details </h3> 

        <div class="form-group col-md-12">     
          <%= form.label :name, :class => "col-sm-5 name"%>
          <%= form.text_field :name, :class => "fontsize col-sm-6" %>
        </div>         
        
        <div class="form-group col-md-12">      
          <%= form.label :telephone, :class => "col-sm-5 telephone"%>
          <%= form.text_field :telephone, :class => "fontsize col-sm-6" %>
        </div>

         <div class="form-group col-md-12">
          <%= form.label :email, :class => "col-sm-5 email"%>
          <%= form.text_field :email, :class => "fontsize col-sm-6" %>
        </div>
      </div>
    </div>

 <!-- SHOWING MAP -->
    <div class="card text-center my-5 mx-5">
      <div class="card-header">
       <h3>Company Location</h3> 
      </div>
      <div class="card-body">   
      <%= render 'location', form: form, id: 1 %>
      </div>
    </div>

  

     <div class="card text-center mx-5 ">
      <div class="card-body top-card"> 
        <!--<div class="form-group col-md-12">
          <%#= form.label :radius, :class => "col-sm-5 width"%>
          <%#= form.text_field :radius, :class => "fontsize col-sm-6" %>
        </div> -->

        <div class="form-group col-md-12">
          <%= form.label :status,:class => "col-sm-5 status"%>
          <%= form.text_field :status, :class => "fontsize col-sm-6" %>
        </div>            
      </div>
    </div>


    <div class="d-flex flex-row my-4 ">
      <div class="d-flex justify-content-center actions">
        <%= form.submit 'Create Company', :class => ' btn btn-primary btn-post' %>
      </div>
    </div>

<% end %>
