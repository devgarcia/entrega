<table class="table table-striped">
  <thead>
  </thead>

  <tbody>
    <tr>
      <th>Name</th>
      <td><%= @company.name %></td>
    </tr>

    <tr>
      <th>Telephone</th>
      <td><%= @company.telephone %></td>
    </tr>

    <tr>
      <th>email</th>
      <td><%= @company.email %></td>
    </tr>

    <tr>
      <th>Address</th>
      <td><%= address(@company, 0) %></td>
    </tr>

    <tr>
      <th>Coordiantes</th>
      <td><%= coordinates(@company, 0).to_dms%></td>
    </tr>

    <tr>
      <th>Radius</th>
      <td><%= @company.radius %></td>
    </tr>

    <tr>
      <th>Status</th>
      <td><%= @company.status %></td>
    </tr>

  </tbody>
</table>

