<div class="container h-100"> <!-- This div and the one below will do center the card -->
  <div class="row h-100 justify-content-center align-items-center"> 

    <div class="card  signup-card text-center">
      <div class="card-header">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <br>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label t(:password) %> <i><%= t(:leave_blank)%> </i><br />
            
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <br>
          <div class="field">
            <%= f.label t(:password_confirmation) %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <br> 
          <div class="field">
            <%= f.label t(:current_password) %> <i><%= t(:current_password_message)%></i><br/>          
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          
          <br>
          <div class="actions btn-devise">
            <%= f.submit t(:update_user_passor_or_email), class: 'btn btn-success mb-2 btn-devise' %>
          </div>
        <% end %>

        <br> 
        <h3><%= t(:cancel_account)%></h3>

        <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-danger' %></p> <!-- This should prompt a message and after only make this User Discontinued(Status), this will not allow them to do anything --> 
        <br> 
        <br> 

        <%= link_to "Back", :back, :class => 'btn-back-loggins' %>   
        <br> 
      </div>
    </div>
  </div>
</div> 
