<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-6">
			<%= link_to "Volver a los pagos", charges_index_path, class: "btn btn-link" %>
			<% unless @error %>
			<table class="table table-bordered mt-3">
				<tr> 
					<th>Reference</th> 
					<td><%= @charge.uid %></td>
				</tr>
				<tr> 
					<th>Status</th> 
					<td><%= @data['x_response'] %></td>
				</tr>
				<tr> 
					<th>Date</th> 
					<td><%= @data['x_transaction_date'] %></td>
				</tr>
				<tr> 
					<th>Amount</th> 
					<td><%= @charge.amount %></td>
				</tr>
				<tr> 
					<th>Bank</th> 
					<td><%= @data['x_bank_name'] %></td>
				</tr>
				<tr> 
					<th>Message</th> 
					<td><%= @data['x_response_reason_text'] %></td>
				</tr>
			</table>
		</div>
		<% else %>
		<div class="alert alert-danger mt-4" role="alert">
			<%= @error %>
		</div>
		<% end %>
	</div>
</div>

