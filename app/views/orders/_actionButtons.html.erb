l: @order, url: [@user, @order], local: true) do |form| %>            <%= form.hidden_field :status, :value => 'pickArrived' %>            <div class="btn-group" role="group" aria-label="First group">               <%= form.submit  "#{Order.human_attribute_name(:pickArrived)}", :class => 'btn btn-primary btn-intransit mb-2 mt-2 status_buttons', name: 'pickArrived' %>            </div>          <% end %>        <% elsif  @order.status == 'pickArrived' %>          <%= form_with(model: @order, url: [@user, @order], local: true) do |form| %>            <%= form.hidden_field :status, :value => 'inTransit' %>            <div class="btn-group" role="group" aria-label="First group">               <%= form.submit  "#{Order.human_attribute_name(:inTransit)}", :class => 'btn btn-primary btn-intransit mb-2 mt-2 status_buttons', name: 'inTransit' %>            </div>          <% end %>        <% elsif  @order.status == 'inTransit' %>          <%= form_with(model: @order, url: [@user, @order], local: true) do |form| %>            <%= form.hidden_field :status, :value => 'deliverArrived' %>            <div class="btn-group" role="group" aria-label="First group">               <%= form.submit  "#{Order.human_attribute_name(:deliverArrived)}", :class => 'btn btn-primary btn-intransit mb-2 mt-2 status_buttons', name: 'deliverArrived' %>            </div>          <% end %>        <% elsif @order.status == 'deliverArrived' %>             <%= form_with(model: @order, url: [@user, @order], local: true) do |form| %>              <%= form.hidden_field :status, :value => 'completed' %>              <%= form.hidden_field :payment_status, :value => 'paid' %>              <div class="btn-group" role="group" aria-label="First group">                 <%= form.submit  "#{Order.human_attribute_name(:complet)}", :class => 'btn btn-primary btn-complet mb-2 mt-2 status_buttons', name: 'complete' %>              </div>            <% end %>          <!-- </div> -->     