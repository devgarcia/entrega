<!-- DIRECTS LOGIC TO RENDER VIEWS DEPENDING ON THE USER & THE ORDER.STATUS -->

<% if @user.class.name == "Sender" && ['draft', 'posted', 'taken'].include?(@order.status) %> 
    <% if @order.status == 'draft' %>     
      <%= render 'forminfo', form: form %>
    <% elsif ['posted', 'taken'].include?(@order.status) %>    
       <%= render 'info', order: @order %> 
    <% end %>    

<% elsif @user.class.name == "Company" && ['posted','taken', 'pickArrived', 'inTransit', 'deliverArrived', 'onWayPick'].include?(@order.status) %>
  <%= render 'info', order: @order %>

<% elsif @user.class.name == "Transporter" && ['taken', 'pickArrived', 'inTransit', 'deliverArrived', 'onWayPick'].include?(@order.status) %>
    <%= render 'info', order: @order %> 
<% end %>



