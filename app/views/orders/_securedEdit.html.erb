<!-- Created to Allow or not to Edit depending on the class and the Oder.status -->

<% if ['completed','cancelled'].include?(@order.status) %>
	<br> 
  <%= render 'restrictedAccess'%>

<% elsif @user.class.name == "Company" && ['posted','taken', 'inTransit'].include?(@order.status) || \
  @user.class.name == "Sender" && @order.status == 'draft' || \
  @user.class.name == "Transporter" && ['taken', 'inTransit'].include?(@order.status) %> 

  <h1>Editing Order <%= @order.id %></h1>
  <%= render 'form', order: @order %>
<% end %>
