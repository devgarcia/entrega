      <td><%= form.select :status, Order.statuses.keys[0..1].map {|status| [status.titleize,status]} %></td> <%# [..] %>
    <% elsif @order.status == 'posted'%>
      <td><%= form.select :status, Order.statuses.keys[5].map {|status| [status.titleize,status]} %></td>
