  @user.class.name == "Sender" && @order.status == 'draft' || \
  @user.class.name == "Transporter" && ['taken', 'inTransit'].include?(@order.status) %> 

  <h1>Editing Order <%= @order.id %></h1>
  <%= render 'form', order: @order %>
<% end %>









































