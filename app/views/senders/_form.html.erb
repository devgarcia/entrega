<%= form_with(model: sender, local: true) do |form| %>
  <% if sender.errors.any? %>
    <div id="error_explanation">
      <!-- <h2><%#= pluralize(sender.errors.count, "error") %> prohibited this sender from being saved:</h2>-->

      <ul>
      <% sender.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
<div class="card text-center mb-4">
  <div class="card-body sender-top-card"> 
    <h3 class="h3Space"><%= t (:sender_details) %></h3> 

    <div class="form-group col-md-12">     
      <b><%= form.label :name, :class => "col-sm-5 send-name"%></b>
      <%= form.text_field :name, :class => "col-sm-6 sender-name" %>
    </div>         
    
    <div class="form-group col-md-12">      
      <b><%= form.label :telephone, :class => "col-sm-5 send-telephone"%></b>
      <%= form.text_field :telephone, :class => "col-sm-6 sender-telephone" %>
    </div>

     <div class="form-group col-md-12">
      <b><%= form.label :email, :class => "col-sm-5 send-email"%></b>
      <%= form.text_field :email, :class => "col-sm-6 sender-email" %>
    </div>
  </div>
</div>

<div class="card text-center mb-4">
  <div class="card-body card-status my-3">
    <div class="form-group col-md-12 my-4 "> 
      <b><%= form.label :status, :class => "col-sm-5 send-status" %></b>
      <%= form.select :status, enum_options_for_select(Sender, :status), {}, { :class => "col-sm-6 sender-status"}  %>
    </div> 
  </div>
</div>

  <!-- SHOWING MAP -->
<div class="card sender-card-location text-center">
  <div class="card-header">
   <h3><%= t (:sender_location) %></h3> 
  </div>
  <div class="card-body">   
  <%= render 'location', form: form, id: 0 %>
  </div>
</div>

  <hr> 
  <div class="row justify-content-center " > 
    <%= render 'senders/actionButtons', form: form %>
  </div>
  <hr class="mb-5"> 
<% end %>

