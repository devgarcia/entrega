<h1 class='headingspace'> <%= @transporter.name %> Profile </h1>

<div class="card mb-2  ">
  <div class="card-body pl-1"> 
    <div class="col-md-12 mb-2 mt-2">
      <div class="row">
        <div class="d-inline col-sm-6 transporter-Showlabels">
           <b><%= "Transporter: "%></b>
        </div>
        <div class="d-inline col-sm-6 mb-3 transporter-Showinputs">
         <%= @transporter.name %>
        </div>
      </div> 

      <div class="row">
        <div class="d-inline col-sm-6 transporter-Showlabels ">
           <b><%= "Telephone: "%></b>
        </div>
        <div class="d-inline col-sm-6 mb-3 transporter-Showinputs">
         <%= @transporter.telephone %>
        </div>
      </div>
      <div class="row">
        <div class="d-inline col-sm-6 transporter-Showlabels">
           <b><%= "Email: "%></b>
        </div>
        <div class="d-inline col-sm-6 mb-3 transporter-Showinputs">
         <%= @transporter.email  %>
        </div>
      </div>
      <div class="row">
        <div class="d-inline col-sm-6 transporter-Showlabels">
          <b><%= "Status: "%></b>
        </div>
        <div class="d-inline col-sm-6 mb-3 transporter-Showinputs">
         <%= @transporter.status %>
        </div>
      </div>
      <div class="row">
        <div class="d-inline col-sm-6 transporter-Showlabels">
          <b><%#= "Radius: "%></b>
        </div>
        <div class="d-inline col-sm-6 mb-3 transporter-Showinputs">
         <%#= @user.radius %>
        </div>
      </div>
    </div>
  </div>
</div> 

<hr> 
